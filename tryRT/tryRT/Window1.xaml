<Window x:Class="GUI.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="345" Loaded="LoadData">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Height="270" Width="335" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="管排" Binding="{Binding row}" Width="170" />
                <DataGridTextColumn Header="换热量" Binding="{Binding heat}" Width="170" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
